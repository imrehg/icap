\setbeamercolor{separation line}{bg=poorange}
\setbeamercolor{title in headline}{fg=powhite}
\setbeamercolor{author in headline}{fg=powhite}
\setbeamercolor{institute in headline}{fg=powhite}

\setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=powhite, bg=poblack}
\setbeamercolor{title in head/foot}{fg=powhite, bg=poblack}

\setbeamercolor*{normal text}{fg=tachameleon, bg=poblack}
\setbeamercolor*{block body}{fg=black, bg=pogray}
\setbeamercolor*{block title}{fg=white,bg=black}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=ta2orange}

\setbeamercolor*{example body}{fg=white,bg=black}
\setbeamercolor*{example text}{fg=ta3aluminium,bg=black}
